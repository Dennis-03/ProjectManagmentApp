<Page
    x:Class="ProjectManagmentApp.View.MyTasksView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:model="using:ProjectManagmentApp.Model" 
    xmlns:local="using:ProjectManagmentApp.View.TaskUserControls"
    mc:Ignorable="d"
    Background="{StaticResource SecondaryColor}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <StackPanel Orientation="Vertical"
                    Margin="0,20">
                <Button Content="In-Complete Tasks"
                        Margin="40,0,0,10"
                        Foreground="{ThemeResource TertairyColor}"
                        Background="{StaticResource SecondaryColor}"
                        FontSize="18"
                        FontWeight="Bold"/>
                <ListView Name="InCompleteTaskList" 
                      Background="{StaticResource PrimaryColor}"
                      Margin="30,0"
                      CornerRadius="5"
                      ItemsSource="{x:Bind inCompleteTaskList}"
                      IsItemClickEnabled="True" 
                      ItemClick="TaskList_ItemClick">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:ZTask" >
                            <local:TaskList />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Button Content="Completed Tasks"
                        Margin="40,40,0,10"
                        FontSize="18"
                        Foreground="{ThemeResource TertairyColor}"
                        Background="{StaticResource SecondaryColor}"
                        FontWeight="Bold"/>
                <ListView Name="CompletedTaskList" 
                      Background="{StaticResource PrimaryColor}"
                      Margin="30,0"
                      CornerRadius="5"
                      ItemsSource="{x:Bind completedTaskList}"
                      IsItemClickEnabled="True" 
                      ItemClick="TaskList_ItemClick">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:ZTask" >
                            <local:TaskList />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>
        <Frame Name="TaskDetailsFrame"
               Grid.Row="1"
               Grid.Column="1"/>
    </Grid>
</Page>
